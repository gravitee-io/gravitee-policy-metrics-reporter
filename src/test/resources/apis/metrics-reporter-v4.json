{
    "id": "proxy-response-callout-http",
    "name": "my-api",
    "gravitee": "4.0.0",
    "type": "proxy",
    "listeners": [
        {
            "type": "http",
            "paths": [
                {
                    "path": "/test"
                }
            ],
            "entrypoints": [{ "type": "http-proxy" }]
        }
    ],
    "endpointGroups": [
        {
            "name": "default",
            "type": "http-proxy",
            "endpoints": [
                {
                    "name": "default-endpoint",
                    "type": "http-proxy",
                    "configuration": { "target": "http://localhost:8080/endpoint" }
                }
            ]
        }
    ],
    "flows": [
        {
            "name": "flow-1",
            "methods": [],
            "enabled": true,
            "path-operator": {
                "path": "/",
                "operator": "STARTS_WITH"
            },
            "request": [],
            "response": [
                {
                    "name": "Metrics Reporter",
                    "description": "",
                    "enabled": true,
                    "policy": "metrics-reporter",
                    "configuration": {
                        "method": "POST",
                        "url": "${METRICS_SERVER}",
                        "scope": "RESPONSE_CONTENT",
                        "body": "{\"id\": \"static-id\", \"method\": \"${request.method}\", \"status\": \"${response.statusCode}\" }"
                    }
                }
            ]
        }
    ]
}
