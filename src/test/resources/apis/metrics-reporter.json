{
    "id": "my-api",
    "name": "my-api",
    "gravitee": "2.0.0",
    "proxy": {
        "context_path": "/test",
        "endpoints": [
            {
                "name": "default",
                "target": "http://localhost:8080/endpoint",
                "http": {
                    "connectTimeout": 3000,
                    "readTimeout": 60000
                }
            }
        ]
    },
    "flows": [
        {
            "name": "flow-1",
            "methods": ["GET"],
            "enabled": true,
            "path-operator": {
                "path": "/",
                "operator": "STARTS_WITH"
            },
            "pre": [],
            "post": [
                {
                    "name": "Metrics Reporter",
                    "description": "",
                    "enabled": true,
                    "policy": "metrics-reporter",
                    "configuration": {
                        "method": "POST",
                        "url": "${METRICS_SERVER}",
                        "scope": "RESPONSE_CONTENT",
                        "body": "{\"id\": \"static-id\", \"method\": \"${request.method}\", \"status\": \"${response.statusCode}\" }"
                    }
                }
            ]
        }
    ]
}
